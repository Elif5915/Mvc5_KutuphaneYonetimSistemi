@model Mvc5_KutuphaneYonetimSistemi.Models.Entity.Kategori

@{
    ViewBag.Title = "KategoriGüncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori Güncelleme</h2>

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.Id)
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k=>k.Ad)
        @Html.TextBoxFor(k => k.Ad, new { @class = "form-control"})
    </div>
    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>


}
