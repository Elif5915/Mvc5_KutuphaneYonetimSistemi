@using Mvc5_KutuphaneYonetimSistemi.Models.Entity
@model List<Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>
                <a href="/Kategori/KategoriSil/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Kategori/KategoriGuncelle/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Yeni Kategori Ekle</a>