@using Mvc5_KutuphaneYonetimSistemi.Models.Entity
@model List<Mesajlar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Gelen Mesajlar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
     
    </tr>

    @foreach(var item in Model)
	{
         <tr>
            <td>@item.Gonderen</td>
            <td>@item.Konu</td>
            <td>@item.Icerik</td>
            <td>@item.Tarih</td>
         </tr>
     }
</table>
