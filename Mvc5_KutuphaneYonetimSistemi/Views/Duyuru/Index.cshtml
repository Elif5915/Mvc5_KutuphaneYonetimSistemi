@using Mvc5_KutuphaneYonetimSistemi.Models.Entity
@model List<Duyuru>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}


<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>Duyuru No</th>
        <th>Tarih</th>
        <th>Kategori</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if(item.Kategori == "Yeni Kitap")
        {
            renk = "bg-info text-white";
        }
        if(item.Kategori == "Diğer")
        {
            renk = "bg-warning text-white";
        }
        if (item.Kategori == "İletişim")
        {
            renk = "bg-danger text-white";
        }
        if (item.Kategori == "Kitapları Geçiktirmeme")
        {
            renk = "bg-success text-white";
        }
        <tr class="@renk">
            <td>@item.Id</td>
            <td>@Convert.ToDateTime(item.Tarih).ToString("dd-MM-yyyyy")</td>
            <td>@item.Kategori</td>
            <td>
                <a href="/Duyuru/DuyuruDetayGuncel/@item.Id" class="btn btn-info" style="background-color:cadetblue">Detaylar</a>
                <a href="/Duyuru/DuyuruSil/@item.Id" class="btn btn-danger">Sil</a>
                @*<a href="/Duyuru/DuyuruGuncelleme/@item.Id" class="btn btn-info">Güncelle</a>*@
            </td>
        </tr>
    }  

</table>
<a href="/Duyuru/DuyuruEkle" class="btn btn-primary">Yeni Duyuru Ekle</a>



