
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>

@*@HttpContext.Current.User.Identity.Name => giriş sf da mail/sifre ile giriş yapılınca girilen mail bilgisini buraya taşıyıp çekmemize yarayan kod*@

<table class="table table-hover">
    <br />
    <tr>
        <td>
            <label style="font-weight:bolder">Üye Id :</label> @TempData["Id"]
        </td>
    </tr>
    <tr>
        <td>
            <label style="font-weight:bolder">Mail Adresi :</label>  @HttpContext.Current.User.Identity.Name
        </td>
    </tr>
    <tr>
        <td>
            <label style="font-weight:bolder">Ad :</label> @TempData["Ad"].ToString()
        </td>
    </tr>
    <tr>
        <td>
            <label style="font-weight:bolder">Soyad :</label> @TempData["Soyad"].ToString()
        </td>
    </tr>
    <tr>
        <td>
            <label style="font-weight:bolder">Kullanıcı Adı :</label>  @TempData["KullaniciAd"].ToString()
        </td>
    </tr>
    <tr>
        <td>
            @*<label style="font-weight:bolder">Şifre :</label>  @Session["Sifre"].ToString()*@
            <label style="font-weight:bolder">Şifre :</label> <input type="text" class="form-control" value=" @TempData["Sifre"].ToString()" />
        </td>
    </tr>
    <tr>
        <td>
            <label style="font-weight:bolder">Okul :</label> @TempData["Okul"].ToString()
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Şifre Güncelle</button>
        </td>
    </tr>
</table>