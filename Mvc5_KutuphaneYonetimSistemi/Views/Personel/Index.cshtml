@using Mvc5_KutuphaneYonetimSistemi.Models.Entity
@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personeller</h2>

<table class="table table-bordered">
    <tr>
        <th>Personel Id</th>
        <th>Personel Adı</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Personel1</td>
            <td>
                <a href="/Personel/PersonelSil/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Personel/PersonelGuncelleme/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>

