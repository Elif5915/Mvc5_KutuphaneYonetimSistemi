@model Mvc5_KutuphaneYonetimSistemi.Models.Entity.Personel

@{
    ViewBag.Title = "PersonelGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel Güncelleme</h2>

@using (Html.BeginForm("PersonelGuncelleme", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.Id)
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.Personel1)
        @Html.TextBoxFor(k => k.Personel1, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>


}
